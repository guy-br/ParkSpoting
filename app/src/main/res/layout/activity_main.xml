<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:weightSum="1">

    <fragment
        android:id="@+id/mapView"
        android:name="com.google.android.gms.maps.MapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/findParkBtn"
        android:src="@drawable/greenparking"
        android:background="@null"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:paddingRight="5dp"
        android:alpha="0.8" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/centerLocationBtn"
        android:contentDescription="center_location.png"
        android:src="@drawable/centerlocation"
        android:background="@android:color/transparent"
        android:layout_above="@+id/findParkBtn"
        android:layout_alignParentEnd="true"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:alpha="0.8" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/postParkBtn"
        android:src="@drawable/blueparking"
        android:background="@null"
        android:visibility="visible"
        android:adjustViewBounds="false"
        android:layout_below="@+id/centerLocationBtn"
        android:layout_alignParentStart="true"
        android:paddingLeft="5dp"
        android:alpha="0.8" />

</RelativeLayout>