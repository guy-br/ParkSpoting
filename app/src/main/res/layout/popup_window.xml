<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    android:layout_centerInParent="true">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#010101"
        android:id="@+id/choose_layout">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:text="Choose Method"
            android:id="@+id/chooseMethod"
            android:gravity="center_vertical|center_horizontal"
            android:textSize="30dp"
            android:textColor="#d0bafffe" />
    </LinearLayout>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:id="@+id/radio_group">

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Insert Address"
            android:id="@+id/add_btn"
            android:checked="false"
            android:padding="5dp" />

        <AutoCompleteTextView
            android:id="@+id/autocomplete_places"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="@android:color/primary_text_light" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select From Favorites"
            android:id="@+id/favorites_btn"
            android:checked="false" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/favorite_spinner"
            android:spinnerMode="dropdown" />

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Use My Location"
            android:id="@+id/use_my_location_btn"
            android:checked="false" />

        <ImageButton
            android:layout_width="120dp"
            android:layout_height="75dp"
            android:id="@+id/go_btn"
            android:src="@drawable/go_car_btn"
            android:layout_gravity="center_horizontal" />

    </RadioGroup>

</LinearLayout>